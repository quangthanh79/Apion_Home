<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/color_primary</item>
    </style>
    <style name="TextNormal">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="hintTextColor">#ffffff</item>
        <item name="android:textSize">13dp</item>
        <item name="android:drawablePadding">@dimen/dp_1</item>
    </style>
    <style name="StyleEditText" parent="TextNormal">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/dp_36</item>
        <item name="android:background">@drawable/background_button3</item>
        <item name="android:drawablePadding">@dimen/dp_12</item>
        <item name="android:paddingStart">@dimen/dp_8</item>
        <item name="android:paddingEnd">@dimen/dp_8</item>
        <item name="android:inputType">textNoSuggestions</item>
    </style>
    <style name="StyleEditTextBonus" parent="StyleEditText">
        <item name="android:layout_marginStart">@dimen/dp_20</item>
        <item name="android:layout_marginTop">@dimen/dp_8</item>
        <item name="android:layout_marginEnd">@dimen/dp_20</item>
    </style>
    <style name="StyleIconBottomSheet">
        <item name="android:layout_width">115dp</item>
        <item name="android:layout_height">3dp</item>
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:background">@drawable/background_dropdownsheet</item>
    </style>
    <style name="ButtonBottomSheet">
        <item name="android:layout_width">160dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_marginTop">25dp</item>
    </style>
    <style name="SheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="behavior_peekHeight">100dp</item>
        <item name="behavior_hideable">false</item>
        <item name="android:colorBackground">@android:color/transparent</item>

    </style>
    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/background_bottomsheet</item>
    </style>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>

    </style>
</resources>