<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:paddingBottom="30dp"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    style="@style/AppTheme">

    <View
        android:id="@+id/view_title"
        android:layout_width="115dp"
        android:layout_height="3dp"
        android:layout_marginTop="25dp"
        style="@style/StyleIconBottomSheet"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Chọn mức giá"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_title" />
    <TextView
        android:id="@+id/price_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="@dimen/dp_18"
        android:text="Mức giá"
        android:textColor="#888B8F"
        android:textSize="14sp"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_title" />
    <TextView
        android:id="@+id/txt_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="@dimen/dp_18"
        android:text="Mức giá"
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintTop_toBottomOf="@+id/text_title" />


    <SeekBar
        android:id="@+id/seekBar_luminosite"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginHorizontal="@dimen/dp_16"
        android:layout_marginTop="28dp"
        android:maxHeight="4dp"
        android:progressDrawable="@drawable/thumb"
        android:scaleY="1"
        android:thumb="@drawable/thumb1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_price" />

    <Button
        android:layout_width="160dp"
        android:layout_height="45dp"
        android:layout_marginTop="130dp"
        android:text="Sử dụng"
        android:textSize="15sp"
        app:backgroundTint="#4E934F"
        android:background="@drawable/background_button5"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seekBar_luminosite" />
</androidx.constraintlayout.widget.ConstraintLayout>